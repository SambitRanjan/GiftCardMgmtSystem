<%= render "navbar" %>

<div class ="container rounded-3 card col-sm-12 my-2 py-2">
    <h2 class="text-center">Order History</h2>
    <table class="table table-striped table-hover">
        <thead>
            <tr>
            <th scope="col">Order Id</th>
            <th scope="col">Recipient Name</th>
            <th scope="col">Ordered Date</th>
            <th scope="col">Gift Card Value</th>
            <th scope="col">Commision (5%)</th>
            <th scope="col">Delivery Status</th>
            </tr>
        </thead>
        <tbody>
        <% Giftcoupon.all.each do |order| %>
            <% if order.user_x == Current.user %>
                <tr>
                <th scope="row"><%= order.id %></th>
                <td><%= order.first_name+" "+order.last_name%></td>
                <td><%= order.created_at.strftime('%F') %></td>
                <td><%= order.gift_card_value %></td>
                <td><%= order.total_amount %></td>
                <td><%= order.status %></td>
                </tr>
            <% end %>
        <% end %>
        </tbody>
    </table>
</div>